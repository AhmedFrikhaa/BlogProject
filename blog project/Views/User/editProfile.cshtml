@{
    var userBlogs = (List<Blog>)ViewData["userBlogs"];
}

@model blog_project.Models.dto.EditUserModel

<div class="container">
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Model.picture" class="rounded-circle" width="210">
                    <div class="mt-3">
                      <h4>@Model.firstName @Model.lastName</h4>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                    @using (Html.BeginForm("editProfile", "User", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                 <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      @Html.LabelFor(m=>m.userName , "User Name")
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Html.TextBoxFor(m=>m.userName , htmlAttributes: new { @class="form-control"})
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      @Html.LabelFor(m=>m.firstName , "First Name")
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Html.TextBoxFor(m=>m.firstName , htmlAttributes: new { @class="form-control"})
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      @Html.LabelFor(m=>m.lastName , "Last Name")
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Html.TextBoxFor(m=>m.lastName , htmlAttributes: new { @class="form-control"})
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      @Html.LabelFor(m=>m.email , "Email")
                    </div>
                    <div class="col-sm-9 text-secondary">
                      @Html.TextBoxFor(m=>m.email , htmlAttributes: new { @class="form-control"})
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <button type="submit" class="btn btn-primary mb-3">Save Changes</button>
                    </div>
                    <div class="col-sm-3">
                      <a asp-action="profilePage" class="btn btn-danger mb-3">Discard</a>
                    </div>
                  </div>
                </div>
                    }

              </div>
            </div>
          </div>
    </div>
</div>
