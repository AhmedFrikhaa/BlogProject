@{
    ViewData["Title"] = "Login";

}

@model blog_project.Models.LoginModel


<div class="container ">
<div class="card text-dark bg-white mb-5 " style="max-width: 30rem;left:33%; top:33%">
<div class="card-header"><h2>Login</h2></div>
<img src="~/media/login.jpg" class="card-img-top width="30%" height="20%">

<div class="card-body">
@using (Html.BeginForm("login", "Authentification", FormMethod.Post))
{
@Html.ValidationSummary(true)
<div class="form-group">
@Html.LabelFor(m => m.email)
@Html.TextBoxFor(m=> m.email , htmlAttributes: new { @class= "form-control" , @placeholder="Enter email" }) 
@Html.ValidationMessageFor(m=>m.email ,  "" , htmlAttributes: new {@class ="text-danger"})  
</div>

<div class="form-group">
@Html.LabelFor(m=> m.password)
@Html.PasswordFor(m=>m.password, htmlAttributes: new { @class= "form-control" , @placeholder="Enter password"})
@Html.ValidationMessageFor(m=>m.password ,  "" , htmlAttributes: new {@class ="text-danger"}) 
</div>
<button type="submit" class="btn btn-dark mt-3">Login</button>
<a class="btn btn-dark mt-3" asp-area="" asp-controller="Authentification" asp-action="signup">sign up</a>

}
</div>
</div> 


</div>