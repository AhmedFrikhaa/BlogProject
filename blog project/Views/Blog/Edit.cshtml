@model blog_project.Models.dto.EditModelBlog

<link rel="stylesheet" href="~/css/createblog.css" asp-append-version="true" type="text/css" />

<hr />

@using (Html.BeginForm("Edit", "blog", FormMethod.Post))
{
    <body>
        <div class="registration-form">
            <form>
                <div class="pageTitle title" style="font-size:33px">EDIT MY BLOG </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.title , "Title")
                    @Html.TextBoxFor(m=>m.title , htmlAttributes: new { @class ="form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=> m.theme, "Theme")
                    @Html.TextBoxFor(m=>m.theme , htmlAttributes: new { @class ="form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m=> m.description, "Description")
                    @Html.TextAreaFor(m=>m.description , htmlAttributes: new { @class ="form-control" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(m=>m.image , "Image")
                    <input type="file" asp-for="image" name="image" class="form-control file" id="customFile">
                </div>

                <div class="form-group">
                    <button type="submit" class=" btn btn-block create-account">Save</button>
                </div>
            </form>
        </div>

    </body>
}